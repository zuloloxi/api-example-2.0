// NOTES

/* 'permitAll' needs to always come first so other roles can make use of it
* as they come afterward
*/

{
	"NAME":"session",
    "VALUES": {
        "id": {
            "type": "PKEY",
            "description":"ID for Section"
        },
        "version": {
            "type": "Long",
            "description":"Version for Updating Section"
        },
        "sectionName": {
            "type": "String",
            "description":"Name of Section"
        }
    },
	"CURRENTSTABLE": "1",
	"VERSION": {
		"1": {
	        "DOMAINPACKAGE":"",
			"DEFAULTACTION":"list",
	        "URI": {
	        	"list": {
	             	"METHOD":"GET",
	            	"DESCRIPTION":"List Sections",
	            	"ROLES":["ROLE_ADMIN"],
	            	"BATCH":["ROLE_ADMIN"],
	                "REQUEST": {
	                	"permitAll":[]
	                },
	                "RESPONSE": {
	                	"permitAll":["id","sectionName","version"]
	                }
	        	},
	            "show": {
	             	"METHOD":"GET",
	            	"DESCRIPTION":"Show Section",
	            	"ROLES":["ROLE_ADMIN"],
	            	"BATCH":["ROLE_ADMIN"],
	                "REQUEST": {
	                    "permitAll":["id"]
	                },
	                "RESPONSE": {
	                	"permitAll":["id","sectionName","version"]
	                }
	            },
	            "create": {
	            	"METHOD":"PUT",
	            	"DESCRIPTION":"Create Section",
	            	"ROLES":["ROLE_ADMIN"],
	            	"BATCH":["ROLE_ADMIN"],
	                "REQUEST": {
	                    "permitAll":["sectionName"]
	                },
	                "RESPONSE": {
	                    "permitAll":["id","version"]
	                },
	                "ERROR":["304_NOT_MODIFIED"]
	            },
	            "update": {
	            	"METHOD":"POST",
	            	"DESCRIPTION":"Update Section",
	            	"ROLES":["ROLE_ADMIN"],
	            	"BATCH":["ROLE_ADMIN"],
	                "REQUEST": {
	                    "permitAll":["id","sectionName"]
	                },
	                "RESPONSE": {
	                    "permitAll":["id","version"]
	                },
	                "ERROR":["304_NOT_MODIFIED"]
	            },
	            "delete": {
	            	"METHOD":"DELETE",
	            	"DESCRIPTION":"Delete Topic",
	            	"ROLES":["ROLE_ADMIN"],
	            	"BATCH":["ROLE_ADMIN"],
	                "REQUEST": {
	                    "permitAll":["id"]
	                },
	                "RESPONSE": {
	                    "permitAll":["id"]
	                },
	                "ERROR":["304_NOT_MODIFIED"]
	            }
	        }
		}
	}
}