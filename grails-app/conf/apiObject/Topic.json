// NOTES

/* 'permitAll' needs to always come first so other roles can make use of it
* as they come afterward

net.nosegrind.Topic
*/

{
	"NAME":"topic",
    "VALUES": {
        "id": {
            "type": "PKEY",
            "description":"ID for topic"
        },
        "version": {
            "type": "Long",
            "description":"Version for Updating Topic"
        },
        "topicName": {
            "type": "String",
            "description":"Name of Topic"
        }
    },
	"CURRENTSTABLE": "1",
	"VERSION": {
		"1": {
			"DOMAINPACKAGE":"",
			"DEFAULTACTION":"list",
	        "URI": {
	        	"list": {
	             	"METHOD":"GET",
	            	"DESCRIPTION":"List Topics",
	            	"ROLES":["ROLE_ADMIN"],
	            	"BATCH":["ROLE_ADMIN"],
	                "REQUEST": {
	                	"permitAll":[]
	                },
	                "RESPONSE": {
	                	"permitAll":["id","topicName","version"]
	                }
	        	},
	            "show": {
	             	"METHOD":"GET",
	            	"DESCRIPTION":"Show Topic",
	            	"ROLES":["ROLE_ADMIN"],
	            	"BATCH":["ROLE_ADMIN"],
	                "REQUEST": {
	                    "permitAll":["id"]
	                },
	                "RESPONSE": {
	                	"permitAll":["id","topicName","version"]
	                }
	            },
	            "save": {
	            	"METHOD":"POST",
	            	"DESCRIPTION":"Create Topic",
	            	"ROLES":["ROLE_ADMIN"],
	            	"BATCH":["ROLE_ADMIN"],
	                "REQUEST": {
	                    "permitAll":["topicName"]
	                },
	                "RESPONSE": {
	                    "permitAll":["id","topicName","version"]
	                },
	                "ERROR":["304_NOT_MODIFIED"]
	            },
	            "update": {
	            	"METHOD":"PUT",
	            	"DESCRIPTION":"Update Topic",
	            	"ROLES":["ROLE_ADMIN"],
	            	"BATCH":["ROLE_ADMIN"],
	                "REQUEST": {
	                    "permitAll":["id","topicName","version"]
	                },
	                "RESPONSE": {
	                    "permitAll":["id"]
	                },
	                "ERROR":["304_NOT_MODIFIED"]
	            },
	            "delete": {
	            	"METHOD":"DELETE",
	            	"DESCRIPTION":"Delete Topic",
	            	"ROLES":["ROLE_ADMIN"],
	            	"BATCH":["ROLE_ADMIN"],
	                "REQUEST": {
	                    "permitAll":["id"]
	                },
	                "RESPONSE": {
	                    "permitAll":["id"]
	                },
	                "ERROR":["304_NOT_MODIFIED"]
	            }
	        }
		}
	}
}